@using System.Text
@using Wisex.Entity.Models
@using Wisex.Common.Enums
@model SystemObjectSummary
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Body.cshtml";
    List<Menu> parentMenus = ViewBag.ParentMenu;
}
@section StylesBefore{
    @Styles.Render("~/Template/backend/Css/SelectStyle")
}

@section Scripts{
    @Scripts.Render("~/JS/backend/Select")
<script>
        $("#submitForm").validate({
            submitHandler: wisex.buttonLoading,
            rules: {
                ObjectName: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                }
            },
            messages: {
                ObjectName: {
                    required: "请输入数据表名称",
                    minlength: "最小长度为2个字符",
                    maxlength: "最大长度为20个字符"
                }
            }
        });
</script>
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                添加数据表
            </header>
            <div class="panel-body">
                <div class="form">
                    <form class="cmxform form-horizontal tasi-form" id="submitForm" method="POST" action="@Request.Url.PathAndQuery" novalidate="novalidate">
                        @Html.HiddenFor(item => item.Id, new { @class = "form-control" })

                        <div class="form-group ">
                            @Html.LabelFor(item => item.ObjectName, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextBoxFor(item => item.ObjectName, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            @Html.LabelFor(item => item.Summary, new { @class = "control-label col-lg-2" })
                            <div class="col-lg-10">
                                @Html.TextAreaFor(item => item.Summary, new { @class = "form-control" })
                            </div>
                        </div>
                       

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-success" type="submit">保存</button>
                                <button class="btn btn-default" type="button" onclick="wisex.goback(this)">返回</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

