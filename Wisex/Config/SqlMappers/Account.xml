    <select id="Loginsys"   resultClass="UserModel" parameterClass="HashTable">
      SELECT [Id]
      ,[LoginName]
      ,[RealName]
      ,[Email]
      ,[Password]
      ,[Status]
      ,[CreateDateTime]
      ,[IsDeleted]
      FROM [dbo].[Users] WHERE LoginName=#loginName#
    </select>

    <insert id="CreateLoginLog"   parameterClass="LoginLog">
      INSERT INTO [dbo].[LoginLog]
      ([UserId]
      ,[LoginName]
      ,[IP]
      ,[Mac]
      ,[CreateDateTime]
      ,[IsDeleted])
      VALUES
      (#UserId#
      ,#LoginName#
      ,#IP#
      ,#Mac#
      ,GETDATE()
      ,'false')
    </insert>

